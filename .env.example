# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/predictive_scaler
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:29092
KAFKA_METRICS_TOPIC=metrics
KAFKA_FEATURES_TOPIC=features
KAFKA_PREDICTIONS_TOPIC=predictions
KAFKA_CONSUMER_GROUP=predictive-scaler

# Prometheus
PROMETHEUS_URL=http://localhost:9090
PROMETHEUS_SCRAPE_INTERVAL=15

# Kubernetes
KUBERNETES_NAMESPACE=default
KUBERNETES_DEPLOYMENT_NAME=dummy-app
KUBERNETES_IN_CLUSTER=false
KUBERNETES_CONFIG_PATH=~/.kube/config

# AWS (optional)
AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# Model Settings
MODEL_DIR=./models
MODEL_SHORT_TERM_HORIZON=15
MODEL_MEDIUM_TERM_HORIZON=1440
MODEL_LONG_TERM_HORIZON=10080
MODEL_CONTEXT_WINDOW=60
MODEL_RETRAIN_INTERVAL=86400

# Scaling Settings
SCALING_MIN_INSTANCES=1
SCALING_MAX_INSTANCES=50
SCALING_TARGET_UTILIZATION=0.7
SCALING_HEADROOM_FACTOR=1.2
SCALING_COOLDOWN_SECONDS=300
SCALING_RATE_LIMIT_UP=10
SCALING_RATE_LIMIT_DOWN=5

# Application
APP_ENV=development
APP_DEBUG=true
APP_LOG_LEVEL=INFO
APP_LOG_FORMAT=json
